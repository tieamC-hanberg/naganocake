<% @total = 0 %>
  <% @order_details.each do |order_detail|%>
    <% @total += order_detail.tax_price * order_detail.amount %>
<% end %>

<div class="container">
  <div style="d-flex align-items-center height:100px;">
    <h2>
     注文履歴詳細
    </h2>
  </div>
</div>
  <div class="container">
    <div class = "row">
      <div class="col-lg-7">
        <h5>注文情報</h5>
          <div class="d-flex align-items-center justify-content-center">
              <table class="table" border="2" style="font-size: 13pt; line-height: 100%;" >
                <tr><th bgcolor="#f5f5f5">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
                <tr><th bgcolor="#f5f5f5">配送先</th><td>〒<%= @order.postcode %><%= @order.address %><%= @order.name %></td></tr>
                <tr><th bgcolor="#f5f5f5">支払方法</th><td><%= @order.payment_i18n %></td></tr>
                <tr><th bgcolor="#f5f5f5">ステータス</th><td><%= @order.order_status_i18n %></td></tr>
              </table>
          </div>
        </div>
      <div class="col-lg-5">
        <h5>請求情報</h5>
          <table class="table" border="2" style="font-size: 13pt; line-height: 100%;">
              <tr><th bgcolor="#f5f5f5">商品合計</th><td><%= @total %>円</td></tr>
              <tr><th bgcolor="#f5f5f5">配送料</th><td>800円</td></tr>
              <tr><th bgcolor="#f5f5f5">ご請求金額</th><td><%= @total + 800 %>円</td></tr>
          </table>
      </div>
    </div>
  </div>
  <div class="container">
    <div class = row>
      <div class="col-lg-8">
        <h5>注文内容</h5>
          <table class="table" border="2" style="font-size: 13pt; line-height: 100%;">
            <thead bgcolor="#f5f5f5" >
              <tr>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
            </thead>
            <tbody>
                <% @order_details.each do |order_detail|%>
                  <tr>
                    <td><%= order_detail.item.item_name %></td>
                    <td><%= order_detail.tax_price %>円</td>
                    <td><%= order_detail.amount %></td>
                    <td>
                      <%= order_detail.tax_price * order_detail.amount %>
                    </td>
                  </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

