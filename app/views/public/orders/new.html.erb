<h2>注文情報入力</h2>

<div>
  <%= form_with model: @order, url: public_orders_path, method: :post, local:true do |f| %>
  <h2>支払い方法</h2>
      <%= f.radio_button :payment_method, "credit_card" %>
      <%= f.label :payment_method,"クレジットカード" %>
      <%= f.radio_button :payment_method, "transfer" %>
      <%= f.label :payment_method,"銀行振込" %>
</div>
  <div>
    <h2>お届け先</h2>
      <%= f.radio_button :delivery_id, "customer_address" %>
      <%= f.label :delivery_id, "ご自身の住所" %>
        <%= @order.postcode %>
        <%= @order.address %>
        <%= @order.name %>

      <%= f.radio_button :delivery_id, "delivery_address" %>
      <%= f.label :delivery_id, "登録済み住所から選択" %>
      <%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :address_display) %>

      <%= f.radio_button :delivery_id, "nes_address" %>
      <%= f.label :delivery_id, "新しい住所を登録" %>
         <div class="form-group">
           <%= f.label "郵便番号(ハイフンなし)" %>
           <%= f.text_field :postcode %>
         </div>
         <div class="form-group">
           <%= f.label "住所" %>
           <%= f.text_area :address %>
         </div>
         <div class="form-group">
          <%= f.label "宛名" %>
          <%= f.text_area :name %>
         </div>

         <td><%= f.submit '確認画面へ進む', url:public_orders_confirm_path, method: :post, class: "btn btn-primary" %></td>
      <% end %>
