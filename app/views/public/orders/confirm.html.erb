
<h2>注文情報確認</h2>
 <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.item_name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
      <tr><th>送料</th><td>800</td></tr>
      <tr><th>商品合計</th><td><% @total += cart_item.subtotal %></td></tr>
      <tr><th>請求金額</th><td><% @total += cart_item.subtotal + 800 %></td></tr>
    <% end %>
    <div>
      支払方法
       <p><%= @order.payment_method %></p>
    </div>
    <div>
      お届け先
     <%= @order.postcode %><br>
     <%= @order.address %><br>
     <%= @order.name %><br>
    </div>
    <%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
　    <%= f.submit "注文を確定する", class: "btn btn-sm btn-danger" %>
    <% end %>
  </tbody>
</table>

