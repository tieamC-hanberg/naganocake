<%= form_with model: delivery, url: public_deliveries_path, local:true, method: :post do |f| %>
  <div class="form-group">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %>
  </div>
  <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_area :address %>
  </div>
  <div class="form-group">
    <%= f.label "宛名" %>
    <%= f.text_area :name %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>