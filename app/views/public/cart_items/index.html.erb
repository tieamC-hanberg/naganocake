<h2>ショッピングカート</h2>
<!--カート削除-->
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.item_name %></td>
      <td><%= cart_item.item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total +=  cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>合計金額</td>
      <td><%= @total %></td>
    </tr>
  </tfoot>
</table>