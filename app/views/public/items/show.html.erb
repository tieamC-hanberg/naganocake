<table class='table'>
    <tr>
        <td><%= image_tag @item.image, size:"100x100" %></td>
        <td><%= @item.item_name %></td>
    </tr>
    <tr>
        <td><%= @item.item_description %></td>
    </tr>
    <tr>
        <td>¥<%= @item.with_tax_price %>(税込)</td>
    </tr>
</table>
 <td><%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, options_for_select((1..10).to_a), {include_blank: '個数選択'}, class: 'sample' %>
        <%= f.submit 'カートに入れる', class: "btn btn-primary" %>
 <% end %>
 </td>