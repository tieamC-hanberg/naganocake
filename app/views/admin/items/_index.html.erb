<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.item_name, admin_item_path(item.id) %></td>
      <td>¥<%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.sale_status == true %>
      <td><%= "販売中" %></td>
      <% else %>
      <td><%= "売り切れ" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>