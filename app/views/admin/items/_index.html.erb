
  <table class='table' border='2' style='font-size: 13pt; line-height: 50%;'>
    <thead bgcolor="#f5f5f5">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.item_name, admin_item_path(item.id) %></td>
        <td>¥<%= item.price %></td>
        <td><%= item.genre.name %></td>
        <% if item.sale_status == true %>
        <td><%= "販売中" %></td>
        <% else %>
        <td><%= "販売停止中" %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div style="margin:0 auto;">
    <%= paginate @items %>
  </div>