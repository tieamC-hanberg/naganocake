<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.item_id %></td>
      <td><%= item.item_name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre_id %></td>
      <td><%= item.sale_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>