<h2>注文履歴詳細</h2>
<table>
  <thead>
    <tr>
      <td>購入者<%= @order.name %></td>
    </tr>
    <tr>
      <td>注文日 <%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先 <%= @order.address %></td>
    </tr>
    <tr>
      <td>支払方法 <%= @order.payment_i18n %></td>
    </tr>
  </thead>
</table>
          <td><%= form_with model: @order, url: admin_order_path, method: :patch, local:true do |f| %>
                <%= f.label "注文ステータス" %>
                <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
                <%= f.submit "更新" , class: "btn btn-outline-success" %>
          　　　<% end %>
          </td>

  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <td>製作ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @total = 0 %>
      <% @order_details.each do |order_detail|%>
      <tr>
        <td><%= order_detail.item.item_name %></td>
        <td><%= order_detail.tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td>
        <%= order_detail.tax_price * order_detail.amount %>
        <% @total += order_detail.tax_price * order_detail.amount %>
        </td>
      </tr>
      <% end %>
      <tr>
            <td><%= form_with model: @order_detail, url: admin_path(@order_details), method: :patch, local:true do |f| %>
                <%= f.select :make_status, OrderDetail.make_statuses_i18n.invert, {prompt: false} %>
                <%= f.submit "更新" , class: "btn btn-outline-success" %>
          　　  　<% end %>
          　</td>
      </tr>
    </tbody>
      <tr>
        <th>商品合計</th><td><%= @total %></td>
        <th>送料</th><td><%= @order.freight %></td>
        <th>請求額合計</th><td><%= @total + @order.freight %></td>
      </tr>
  </table>