<div class="container">
  <div style="d-flex align-items-center height:100px;">
    <h4>
     ジャンル編集
    </h4>
  </div>
</div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true, method: :patch do |f| %>
          <span class="form-group">
            <%= f.label " ジャンル名" %>
            <%= f.text_field :name %>
          <span class="form-group">
            &emsp;&emsp;&emsp;<%= f.submit "変更を保存", class: 'btn btn-success' %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
